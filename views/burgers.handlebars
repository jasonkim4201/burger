<div class="mt-4 mx-4 pt-4">


  <div class="row">

    {{!-- LEFT AREA --}}
    <div class="col-4">
      <br>
      <ul class="list-group burgerZone">
        <div class="card font-weight-bold text-center">Ready to eat!</div>
        {{#each burgerMenu}}
        {{#unless devoured}}
        <li class="list-group-item">
          {{burger_name}}
          <button data-id="{{id}}" class="trashBtn btn btn-danger float-right">🗑️</button>
          <buttton data-id="{{id}}" class="devourBtn btn btn-success float-right">🍽️</buttton>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- CENTER AREA --}}
    <div class="col-4">
      <br>
      <div class="card" id="mainTitle">
        <div class="body">
          <h1 class="display-5 text-center">Burgers</h1>
        </div>
      </div>
      <div class="inputZone mx-auto">
        <input class="form-control text-center" type="text" id="burgerInput" placeholder="Add burger here!" />
        <button class="btn btn-block" id="submitBtn">Click</button>
      </div>
      <div class="row">
        <button class="btn btn-primary mx-auto" id="tacoBtn">🌮</button>
      </div>
    </div>

    {{!-- RIGHT AREA EATEN --}}
    <div class="col-4">
      <br>
      <ul class="list-group burgerZone text-center">
        <div class="card font-weight-bold">DEVOURED</div>
        {{#each burgerMenu}}
        {{#if devoured}}
        <li class="list-group-item">
          {{burger_name}}
          <button data-id="{{id}}" class="trashBtn btn btn-danger float-right">🗑️</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>